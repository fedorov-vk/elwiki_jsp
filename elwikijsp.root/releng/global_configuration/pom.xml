	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<repositories>
		<repository>
			<id>platform-repo</id>
			<layout>p2</layout>
			<url>${platform-repo.url}</url>
		</repository>
		<repository>
			<id>apcahe-tools</id>
			<layout>p2</layout>
			<url>${apachetools-repo.url}</url>
		</repository>
		<repository>
			<id>custom-p2-repo</id>
			<layout>p2</layout>
			<url>${custom-repo.url}</url>
		</repository>
<!--
		<repository>
			<id>rap-repo</id>
