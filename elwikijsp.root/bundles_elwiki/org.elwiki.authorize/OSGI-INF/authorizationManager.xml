<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
   name="org.elwiki.authorize.authorizationManager"
   activate="startup" deactivate="shutdown">
   <implementation class="org.elwiki.authorize.internal.services.DefAuthorizationManager"/>
   <service>
      <provide interface="org.apache.wiki.auth.AuthorizationManager"/>
   </service>
   <reference bind="setConfiguration" cardinality="1..1" interface="org.elwiki.configuration.IWikiConfiguration" name="IWikiConfiguration" policy="static"/>
   <reference bind="setGroupManager" cardinality="1..1" interface="org.elwiki.api.authorization.IAuthorizer" name="IAuthorizer" policy="static"/>
   <reference bind="setAclManager" cardinality="1..1" interface="org.apache.wiki.auth.acl.AclManager" name="AclManager" policy="static"/>
</scr:component>
