<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
   name="org.elwiki.authorize.userManager"
   activate="startup" deactivate="shutdown">
   <implementation class="org.elwiki.authorize.internal.services.DefaultUserManager"/>
   <service>
      <provide interface="org.apache.wiki.auth.UserManager"/>
   </service>
   <reference bind="setConfiguration" cardinality="1..1" interface="org.elwiki.configuration.IWikiConfiguration" name="IWikiConfiguration" policy="static"/>
   <reference bind="setAuthorizationManager" cardinality="1..1" interface="org.apache.wiki.auth.AuthorizationManager" name="AuthorizationManager" policy="static"/>
   <reference bind="setAuthenticationManager" cardinality="1..1" interface="org.apache.wiki.auth.IIAuthenticationManager" name="IIAuthenticationManager" policy="static"/>
   <reference bind="setTasksManager" cardinality="1..1" interface="org.apache.wiki.api.tasks.TasksManager" name="TasksManager" policy="static"/>
   <reference bind="setFilterManager" cardinality="1..1" interface="org.apache.wiki.filters0.FilterManager" name="FilterManager" policy="static"/>
</scr:component>
