<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.3.0" activate="startup" deactivate="shutdown" name="elwiki.DefaultAuthorizationManager">
   <property name="event.topics" value="org/elwiki/events/init/*"/>
