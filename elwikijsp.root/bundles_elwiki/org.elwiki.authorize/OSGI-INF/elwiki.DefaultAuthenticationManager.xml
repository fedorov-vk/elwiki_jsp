      <provide interface="org.apache.wiki.auth.IIAuthenticationManager"/>
      <provide interface="org.elwiki.api.component.WikiManager"/>
      <provide interface="org.osgi.service.event.EventHandler"/>
   </service>
   <reference cardinality="1..1" field="eventAdmin" interface="org.osgi.service.event.EventAdmin" name="eventAdmin" policy="dynamic"/>
   <reference cardinality="1..1" field="userAdminService" interface="org.osgi.service.useradmin.UserAdmin" name="userAdminService" policy="dynamic"/>
   <implementation class="org.elwiki.authorize.internal.services.DefaultAuthenticationManager"/>
</scr:component>